<h1>Embraces Page</h1>

{{#if embraces.length}}

<ul>
    {{#each embraces}}
    <li>
        <form class="embrace" action="/embrace" method="POST">
            <div class="embrace-body">
                <span>{{ title }}</span>
                <a href="{{ imageUrl }}">{{ imageUrl }}</a>
                <span>{{ price }}</span>
                <input type="hidden" value="{{ _id }}" name="id">
            </div>
            <button type="submit" class="btn">View</button>
        </form>
    </li>
    {{/each}}
</ul>
{{else}}
<p>No embraces!</p>
{{/if}}